<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/lc_rl_tv_chandelier"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lc_item_layout_height"
    android:layout_below="@+id/lc_toolbar"
    android:layout_marginLeft="@dimen/content_margin_left"
    android:layout_marginRight="@dimen/content_margin_right"
    android:gravity="center_vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/tv_name_light1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColorWhite" />

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switch_light1"
        android:checked="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />
</RelativeLayout>
