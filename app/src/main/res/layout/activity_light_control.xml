<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_light_control"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/globalBg"
    tools:context="com.example.hanawa.smarterhometest.LightControlActivity">

    <include
        android:id="@+id/lc_toolbar"
        layout="@layout/toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_line_vertical_height"
        android:layout_below="@+id/lc_toolbar"
        android:background="@color/toolBarLineColor" />

    <RelativeLayout
        android:id="@+id/lc_rl_tv_chandelier"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lc_item_layout_height"
        android:layout_below="@+id/lc_toolbar"
        android:layout_marginLeft="@dimen/content_margin_left"
        android:layout_marginRight="@dimen/content_margin_right"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_chandelier"
            android:textColor="@color/textColorWhite" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/lc_sc_tv_chandelier"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_rl_brightness_control"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lc_brightness_layout_height"
        android:layout_below="@+id/lc_rl_tv_chandelier"
        android:paddingLeft="@dimen/content_margin_left"
        android:paddingRight="@dimen/content_margin_left"
        android:paddingTop="@dimen/lc_text_margin_top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lc_sb_bright"
            android:text="@string/dark"
            android:textColor="@color/textColorDark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/lc_sb_bright"
            android:text="@string/bright"
            android:textColor="@color/textColorBright" />

        <ImageView
            android:id="@+id/lc_iv_brightness1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/lc_scroll_margin_hor"
            android:src="@mipmap/switch_dimmer" />

        <SeekBar
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
            android:id="@+id/lc_sb_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/lc_iv_brightness2"
            android:layout_toRightOf="@+id/lc_iv_brightness1"
            android:indeterminate="false" />

        <ImageView
            android:id="@+id/lc_iv_brightness2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/lc_scroll_margin_hor"
            android:src="@mipmap/switch_brighter" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_rl_light_belt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lc_item_layout_height"
        android:layout_below="@+id/lc_rl_brightness_control"
        android:paddingLeft="@dimen/content_margin_left"
        android:paddingRight="@dimen/content_margin_right">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_vertical_height"
            android:background="@color/lineColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/light_belt"
            android:textColor="@color/textColorDark" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/lc_sc_light_belt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_rl_relax_light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lc_item_layout_height"
        android:layout_below="@+id/lc_rl_light_belt"
        android:paddingLeft="@dimen/content_margin_left"
        android:paddingRight="@dimen/content_margin_right">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_vertical_height"
            android:background="@color/lineColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/relax_area_light"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/lc_item_text_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/lc_sc_relax_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lc_rl_center_light"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lc_item_layout_height"
        android:layout_below="@+id/lc_rl_relax_light"
        android:paddingLeft="@dimen/content_margin_left"
        android:paddingRight="@dimen/content_margin_right">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_vertical_height"
            android:background="@color/lineColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/center_area_light"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/lc_item_text_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/lc_sc_center_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/lc_item_layout_height"
        android:layout_below="@+id/lc_rl_center_light"
        android:paddingLeft="@dimen/content_margin_left"
        android:paddingRight="@dimen/content_margin_right">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_vertical_height"
            android:background="@color/lineColor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/tv_light"
            android:textColor="@color/textColorWhite"
            android:textSize="@dimen/lc_item_text_size" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/lc_sc_tv_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

</RelativeLayout>
