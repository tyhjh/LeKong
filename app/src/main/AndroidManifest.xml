<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hanawa.smarterhometest">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LivingRoomActivity" />
        <activity android:name=".LightControlActivity" />
        <activity android:name=".TemControlActivity" />
        <activity android:name=".ScenesControlActivity" />
        <activity android:name=".ModeSelectActivity" />
        <activity android:name=".SignIn"></activity>
        <service android:name=".service.MyService"/>
    </application>

</manifest>